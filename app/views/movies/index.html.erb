<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<div id="movies">
  <% if @movies.present? %>
    <%= form_for :movies, url: "/movies/destroy_multiple", method: :delete do |f| %> 
      <ul>
        <% @movies.each do |movie| %>
          <li> <%= movie.title %> <input type="checkbox" name="collection_ids[]" value="<%= movie.id %>" /> </li>
          <%= render movie %>
          <p>
            <%= link_to "Show this movie", movie %>
          </p>
        <% end %>
      </ul>
      <%= f.submit "Delete selected" %>
    <% end %>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
